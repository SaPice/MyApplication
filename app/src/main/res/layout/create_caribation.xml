<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/create_caribation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.spice.myapplication.CreateCaribation">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:imeOptions="actionDone"
                android:id="@+id/eTNameCalibration"
                android:hint="Name Calibration" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="40dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true">


                <!--@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@ toP Pic  @@@@@@@@@@@@@@@@@@@@@@@@@@@@@@-->
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/Title"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:gravity="center">

                    <TextView
                        android:text="Intensity"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView7"
                        android:layout_gravity="center"
                        android:layout_width="80dp" />

                    <TextView
                        android:text="TakePhoto"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView8"
                        android:layout_gravity="center" />

                    <TextView
                        android:text="R"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView9"
                        android:layout_gravity="center"
                        android:layout_width="60dp" />

                    <TextView
                        android:text="G"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView10"
                        android:layout_gravity="center"
                        android:layout_width="60dp" />

                    <TextView
                        android:text="B"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView11"
                        android:layout_gravity="center"
                        android:layout_width="60dp" />
                </TableRow>


                <!--@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@ ONE  @@@@@@@@@@@@@@@@@@@@@@@@@@@@@@-->
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/r1"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:gravity="center">

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:hint="0.0"
                        android:ems="3"
                        android:id="@+id/eT1"
                        android:layout_gravity="center"
                        android:imeOptions="actionDone" />


                    <android.support.design.widget.FloatingActionButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:onClick="ibtnDoTakephoto"
                        app:fabSize="mini"
                        app:srcCompat="@drawable/ic_action_photo"
                        android:id="@+id/floatingActionButton2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tVR1"
                        android:layout_gravity="center"
                        android:hint="0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tVG1"
                        android:layout_gravity="center"
                        android:hint="0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tVB1"
                        android:layout_gravity="center"
                        android:hint="0" />

                </TableRow>


                <!--@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@ TWO  @@@@@@@@@@@@@@@@@@@@@@@@@@@@@@-->
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/r2"
                    android:gravity="center"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp">

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:ems="3"
                        android:id="@+id/eT2"
                        android:layout_gravity="center"
                        android:hint="0.0"
                        android:imeOptions="actionDone" />


                    <android.support.design.widget.FloatingActionButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:onClick="ibtnDoTakephoto2"
                        app:fabSize="mini"
                        app:srcCompat="@drawable/ic_action_photo"
                        android:id="@+id/floatingActionButton3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tVR2"
                        android:layout_gravity="center"
                        android:hint="0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tVG2"
                        android:layout_gravity="center"
                        android:hint="0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tVB2"
                        android:layout_gravity="center"
                        android:hint="0" />

                </TableRow>



                <!--@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@ THREE  @@@@@@@@@@@@@@@@@@@@@@@@@@@@@@-->
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/r3"
                    android:gravity="center"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp">

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:ems="3"
                        android:id="@+id/eT3"
                        android:layout_gravity="center"
                        android:hint="0.0"
                        android:imeOptions="actionDone" />


                    <android.support.design.widget.FloatingActionButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:onClick="ibtnDoTakephoto3"
                        app:fabSize="mini"
                        app:srcCompat="@drawable/ic_action_photo"
                        android:id="@+id/floatingActionButton4" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tVR3"
                        android:layout_gravity="center"
                        android:hint="0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tVG3"
                        android:layout_gravity="center"
                        android:hint="0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tVB3"
                        android:layout_gravity="center"
                        android:hint="0" />

                </TableRow>



                <!--@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@ FOUR  @@@@@@@@@@@@@@@@@@@@@@@@@@@@@@-->
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/r4"
                    android:gravity="center"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp">

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:ems="3"
                        android:id="@+id/eT4"
                        android:layout_gravity="center"
                        android:hint="0.0"
                        android:imeOptions="actionDone" />


                    <android.support.design.widget.FloatingActionButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:onClick="ibtnDoTakephoto4"
                        app:fabSize="mini"
                        app:srcCompat="@drawable/ic_action_photo"
                        android:id="@+id/floatingActionButton5" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tVR4"
                        android:layout_gravity="center"
                        android:hint="0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tVG4"
                        android:layout_gravity="center"
                        android:hint="0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tVB4"
                        android:layout_gravity="center"
                        android:hint="0" />

                </TableRow>



                <!--@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@ FIVE  @@@@@@@@@@@@@@@@@@@@@@@@@@@@@@-->
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/r5"
                    android:gravity="center"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp">

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:ems="3"
                        android:id="@+id/eT5"
                        android:layout_gravity="center"
                        android:hint="0.0"
                        android:imeOptions="actionDone" />


                    <android.support.design.widget.FloatingActionButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:onClick="ibtnDoTakephoto5"
                        app:fabSize="mini"
                        app:srcCompat="@drawable/ic_action_photo"
                        android:id="@+id/floatingActionButton6" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tVR5"
                        android:layout_gravity="center"
                        android:hint="0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tVG5"
                        android:layout_gravity="center"
                        android:hint="0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tVB5"
                        android:layout_gravity="center"
                        android:hint="0" />

                </TableRow>


            </TableLayout>

            <Button
                android:text="Compute"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:onClick="btnCompute"
                android:id="@+id/btnCompute"
                android:layout_marginTop="30dp" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom">

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">

    </LinearLayout>

</RelativeLayout>
